<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FF184C85"
        android:gravity="center"
        android:text="Select"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/bMainNew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Create New"
            android:background="@drawable/custom"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/bMainTemp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Use Template"
            android:background="@drawable/custom"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/bMainFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Open File"
            android:background="@drawable/custom"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/bMainExample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Example&apos;s"
            android:background="@drawable/custom"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/bMainWebSource"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Get WebSource"
            android:background="@drawable/custom"
            android:textColor="#ffffff" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="a1532ed82f46569" />

</LinearLayout>